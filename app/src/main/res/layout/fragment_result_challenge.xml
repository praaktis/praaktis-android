<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_gradient"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="20dp"
            app:navigationIcon="@drawable/ic_close_icon"
            tools:layout_marginTop="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/your_result"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            tools:layout_marginTop="10dp"
            />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:clickable="true"
        tools:context=".ui.details.view.DetailsActivity"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvYourScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="Your score: 65%"
                    android:textAllCaps="true"
                    android:textColor="@color/black_text"
                    android:textSize="17sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextureView
                        android:id="@+id/videoView1"
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:layout_marginTop="2dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    >

                    <TextureView
                        android:id="@+id/videoView2"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        android:visibility="visible"
                        android:layout_marginTop="2dp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTryAgain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:theme="@style/WhiteHighlight"
                        app:cardBackgroundColor="@color/blue_back"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/try_again"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvDetailAnalysis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:theme="@style/WhiteHighlight"
                        app:cardBackgroundColor="@color/yellow_detail"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/detailed_analysis"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:padding="20dp"
                android:src="@drawable/vector_play"
                android:tint="@color/black_text"
                />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
