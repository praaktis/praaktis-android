<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/app_gradient"
        tools:context=".ui.new_player.view.NewPlayerFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/activate_new_player_message"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/cv_new_player"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_max="370dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_new_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:cardElevation="6dp"
            app:contentPadding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintWidth_max="370dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_activate_new_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0"
                    android:minHeight="0dp"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="32dp"
                    android:text="@string/activate_new_player"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:backgroundTint="@color/primaryColor"
                    app:icon="@drawable/ic_add_circle_white"
                    app:iconSize="32dp"
                    app:iconTint="@color/transparent"
                    app:iconTintMode="src_over"
                    app:shapeAppearance="@style/ShapeAppearance.AppTheme.Circle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subscribe"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/subscribe_message"
                    android:textColor="@color/grey_600"
                    android:textSize="16sp"
                    app:textAllCaps="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/AppTheme.MaterialButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="30dp"
            android:alpha=".5"
            android:paddingStart="38dp"
            android:paddingEnd="38dp"
            android:text="@string/back"
            app:icon="@drawable/ic_arrow_left"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            tools:textSize="17sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>