<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorSurface">@color/surfaceColor</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnSurface">@color/grey_600</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>

        <!-- Cards, dialogs, date picker container -->
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AppTheme.MediumComponent
        </item>

        <item name="materialButtonStyle">@style/AppTheme.MaterialButton</item>

        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AppTheme.MaterialAlertDialog
        </item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.TransparentStatusBarNavigationBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.TransparentStatusBarNavigationBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MainTheme" parent="AppTheme.TransparentStatusBarNavigationBar">

    </style>

    <style name="AppTheme.TransparentStatusBarNavigationBar" parent="AppTheme">

    </style>

    <style name="ShapeAppearance.AppTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.Dialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%p</item>
    </style>

    <style name="ShapeAppearance.AppTheme.HalfCircle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">25dp</item>
        <item name="backgroundTint">@color/amber_300</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button</item>
    </style>

    <style name="AppTheme.MaterialButton.Secondary" parent="AppTheme.MaterialButton">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.Secondary</item>
    </style>

    <style name="AppTheme.MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="TextAppearance.AppTheme.Button.Secondary" parent="TextAppearance.AppTheme.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">@color/secondaryColor</item>
        <item name="materialThemeOverlay">@style/Widget.AppTheme.TextInputLayout.Overlay</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.Overlay" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="editTextStyle">@style/Widget.AppTheme.TextInputEditText</item>
    </style>

    <style name="Widget.AppTheme.TextInputEditText" parent="Widget.Design.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey_600</item>
    </style>

    <style name="ThemeOverlay.AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Material3
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.MaterialButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.MaterialButton.Secondary</item>
    </style>

    <style name="TextAppearance.AppTheme.TabItem" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="WhiteHighlight" parent="AppTheme">
        <item name="colorControlHighlight">@color/dark_grey</item>
        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="colorControlActivated">@color/dark_grey</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="colorPrimary">@color/black</item>
        <!--<item name="colorAccent">@color/black</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/dark_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/grey_800</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/main_bg</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.TransparentStatusBarNavigationBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.LoadingWhite" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:progress">@android:color/white</item>
    </style>

</resources>
